<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Registrarse"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColorHint="#808080"
            android:textAlignment="center"
            app:counterEnabled="true"
            app:counterMaxLength="40"
            android:id="@+id/til_Registrarse_Nombre"
            app:errorEnabled="true"
            android:hint="Ingresa tu Nombre">

            <EditText
                android:id="@+id/txt_registrarse_Nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="textStart"
                android:maxLength="40"
                android:drawableLeft="@drawable/ic_suario"
                android:drawablePadding="5dp"
                android:inputType="textCapWords|textPersonName"
                android:textSize="15sp"
                android:paddingTop="15dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#808080"
            android:textAlignment="center"
            android:layout_marginVertical="5dp"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            android:id="@+id/til_Registrarse_Numero"
            app:errorEnabled="true"
            android:hint="Ingresa tu Numero">

            <EditText
                android:id="@+id/txt_registrarse_Numero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="textStart"
                android:maxLength="15"
                android:drawableLeft="@drawable/ic_numero"
                android:drawablePadding="5dp"
                android:inputType="phone"
                android:textSize="15sp"
                android:paddingTop="15dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#808080"
            android:textAlignment="center"
            app:counterEnabled="true"
            android:layout_marginVertical="5dp"
            android:id="@+id/til_Registrarse_Correo"
            app:errorEnabled="true"
            app:counterMaxLength="40"
            android:hint="Ingresa tu Correo">

            <EditText
                android:id="@+id/txt_registrarse_Correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="textStart"
                android:drawableLeft="@drawable/ic_correo"
                android:drawablePadding="5dp"
                android:inputType="textEmailAddress"
                android:maxLength="40"
                android:textSize="15sp"
                android:paddingTop="15dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#808080"
            android:textAlignment="center"
            app:counterEnabled="true"
            android:id="@+id/til_Registrarse_NControl"
            app:errorEnabled="true"
            android:layout_marginVertical="5dp"
            app:counterMaxLength="8"
            app:passwordToggleEnabled="true"
            android:hint="Ingresa tu Número de Control">

            <EditText
                android:id="@+id/txt_registrarse_NControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="textStart"
                android:drawableStart="@drawable/ic_ncontrol"
                android:drawablePadding="5dp"
                android:maxLength="8"
                android:inputType="number"
                android:textSize="15sp"
                android:paddingTop="15dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#808080"
            android:textAlignment="center"
            app:counterEnabled="true"
            android:id="@+id/til_Registrarse_Contraseña"
            app:errorEnabled="true"
            android:layout_marginVertical="5dp"
            app:counterMaxLength="4"
            app:passwordToggleEnabled="true"
            android:hint="Ingresa tu NIP">

            <EditText
                android:id="@+id/txt_registrarse_Contraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="textStart"
                android:drawableStart="@drawable/ic_contrasena"
                android:drawablePadding="5dp"
                android:maxLength="4"
                android:inputType="numberPassword"
                android:textSize="15sp"
                android:paddingTop="15dp"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_registrarse_Registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Registrarse"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:theme="@style/BotonLogin" />

            <Button
                android:id="@+id/btn_registrarse_Cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:theme="@style/BotonLogin" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>